{
  "name": "react-express-project-starter",
  "version": "1.0.0",
  "description": "A starter project for running React and Express together",
  "main": "server/server.js",
  "scripts": {
    "precommit": "lint-staged",
    "start":
      "concurrently --kill-others-on-fail \"yarn start-server\" \"yarn start-client\"",
    "start-client": "node ./start-client.js",
    "start-server": "node ./server/server.js",
    "watch-server": "nodemon ./server/server.js",
    "test-server": "jest",
    "test-server:watch": "jest --watch",
    "test-server:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": ["<rootDir>/client/", "<rootDir>/node_modules/"]
  },
  "repository": {},
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-async-wrap": "^1.0.0",
    "express-jwt": "^5.3.0",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "method-override": "^2.3.10",
    "methods": "^1.1.2",
    "mongoose": "^5.0.0",
    "mongoose-unique-validator": "^2.0.0",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "request": "^2.83.0",
    "slug": "^0.9.1"
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "@types/mongoose": "^4.7.33",
    "concurrently": "^3.5.1",
    "eslint": "^4.16.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-plugin-prettier": "^2.5.0",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^7.0.2",
    "mongodb-memory-server": "^1.6.4",
    "mongoose-fixture-loader": "^1.0.2",
    "prettier": "^1.11.1",
    "sinon": "^4.2.1",
    "supertest": "^3.0.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,json,css}": ["prettier --single-quote --write", "git add"]
  }
}

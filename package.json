{
  "name": "react-express-project-starter",
  "version": "1.0.0",
  "description": "A starter project for running React and Express together",
  "scripts": {
    "precommit": "lint-staged",
    "install": "(cd client && yarn) && (cd server && yarn)",
    "start":
      "concurrently --kill-others-on-fail \"yarn start-server\" \"yarn start-client\"",
    "start-client": "node ./start-client.js",
    "start-server": "node ./server/server.js",
    "watch-server": "nodemon ./server/server.js"
  },
  "repository": {},
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^3.5.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.2",
    "prettier": "^1.11.1"
  },
  "lint-staged": {
    "**/*.{js,jsx,json,css}": ["prettier --write", "git add"]
  }
}
